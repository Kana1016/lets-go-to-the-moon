<h1 class="text-2xl font-bold mb-6 text-center">新しい記録を追加</h1>

<%= form_with model: @record, local: true, class: "max-w-xl mx-auto space-y-6" do |f| %>
  <div>
    <%= f.label :recorded_at, "記録日", class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_field :recorded_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>

  <div>
    <%= f.label :jump_time, "縄跳び時間（分）", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :jump_time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>

  <div>
  <%= f.label :speed, "1分間当たりの回数", class: "block text-sm font-medium text-gray-700" %>
  <%= f.select :speed,[["100step / 分", "slow"], ["140step / 分", "normal"], ["180step / 分", "fast"]], { prompt: "選択してください" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
</div>

  <div>
    <%= f.label :jump_total_count, "累計縄跳び回数", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :jump_total_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>

  <div>
    <%= f.label :walk_count, "歩数", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :walk_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>

  <div>
    <%= f.label :total_distance, "アプリ内での総移動距離（km）", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :total_distance, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>

  <div class="text-center">
    <%= f.submit "記録を保存", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md" %>
  </div>
<% end %>
