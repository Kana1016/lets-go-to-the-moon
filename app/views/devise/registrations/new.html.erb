<%= render 'shared/error_messages', object: resource %>
<div class="w-full min-h-screen flex justify-center items-center">
  <div class="w-full max-w-md px-6">
    <!-- サインアップカード -->
    <div class="bg-white shadow-lg rounded-lg p-6 text-center">
      <h1 class="text-2xl font-bold mb-6">🚀 サインアップ画面</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.email_field :email, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "メールアドレス" %>
        </div>

        <div class="mb-4">
          <%= f.text_field :name, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "ユーザーネーム" %>
        </div>

        <div class="mb-4">
          <%= f.password_field :password, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "パスワード" %>
        </div>

        <div class="mb-6">
          <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "パスワード確認" %>
        </div>

        <%= f.submit "サインアップ", class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition" %>
      <% end %>

      <% if notice %>
        <p class="mt-4 text-green-600"><%= notice %></p>
      <% elsif alert %>
        <p class="mt-4 text-red-600"><%= alert %></p>
      <% end %>
    </div>

    <!-- サインイン案内カード -->
    <div class="bg-white shadow-md rounded-lg mt-4 py-4 px-6 text-center">
      <p class="text-gray-700">
        既にアカウントを持っている？<br>
        <%= link_to "サインイン", new_user_session_path, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  </div>
</div>
