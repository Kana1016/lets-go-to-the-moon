<header>
  <div class="flex h-20 items-center justify-between border-b-2 px-4">
    <h1 class="px-3 text-2xl">
      <%= link_to root_path do %>
        <%= image_tag 'favicon.ico', alt: 'ロゴ' %>
      <% end %>
    </h1>
    <% if user_signed_in? %>
    <nav>
      <button
        id="menuBtn"
        type="button"
        class="fixed top-3 right-4 z-10 flex h-14 w-14 items-center justify-center rounded-md border-none bg-purple-950 text-yellow-200 sm:hidden"
      >
        <!-- https://fontawesome.com/icons/bars?s=solid&f=classic -->
        <i id="menuIconBars" class="fa-solid fa-bars fa-2x"></i>

        <!-- https://fontawesome.com/icons/xmark?s=solid&f=classic -->
        <i id="menuIconX" class="fa-solid fa-xmark fa-2x hidden"></i>
      </button>
        <ul
          id="menu"
          class="fixed top-0 left-0 z-0 flex w-full translate-x-full flex-col bg-purple-950 text-center font-bold text-white transition-all ease-linear sm:static sm:w-full sm:translate-x-0 sm:flex-row sm:place-items-center sm:bg-white sm:text-black"
        >
        <li class="p-3">
          <%= link_to 'トップページ', root_path %>
        </li>
        <li class="p-3">
          <%= link_to '記録ページ', '#' %>
        </li>
        <li class="p-3">
          <%= link_to '過去の記録一覧', '#' %>
        </li>
        <li class="p-3">
          <%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
        </li>
      </ul>
    </nav>
    <% end %>
  </div>
</header>

<script>
  menuBtn.addEventListener('click', () => {
  // クリックした時に、"translate-x-full"を追加、削除する。
  // "translate-x-full"が追加されると
  // menuが画面の外に位置するので非表示となる。
    menu.classList.toggle('translate-x-full');
    menuIconBars.classList.toggle('hidden');
    menuIconX.classList.toggle('hidden');
  });
</script>